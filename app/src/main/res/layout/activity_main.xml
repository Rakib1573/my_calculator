<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my_calculator.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.example.my_calculator.MainActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:layout_weight=".5"
            android:backgroundTint="#e0e0e0"
            android:gravity="end"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="50sp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="2"
            android:dividerPadding="8dp"
            android:showDividers="beginning">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="7"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="8"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="9"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/buttonAdd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#d05ce3"
                    android:text="+"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="4"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="5"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="6"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/buttonSub"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#d05ce3"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/buttonMul"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#d05ce3"
                    android:text="*"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#ff5131"
                    android:text="C"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#8eacbb"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/buttonEQUAL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#2e7d32"
                    android:text="="
                    android:textAlignment="center"
                    android:textSize="64sp" />

                <Button
                    android:id="@+id/buttonDiv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#d05ce3"
                    android:text="/"
                    android:textAlignment="center"
                    android:textSize="64sp" />

            </TableRow>

        </TableLayout>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:id="@+id/navid"></com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>